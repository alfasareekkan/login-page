<section>
    <div class="container">
        <div class="row ">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
              <a href="/admin/add-products" style="width: 150px;" class="btn btn-success ">Add Product</a>

            </div>

    <table class="table table-success table-striped mt-1" id="table_id">
      <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.descripton}}</td>
      <td><img width="50px" height="50px"src="/product-image/{{this._id}}.jpg" alt="{{this.description}}"></td>
       <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-outline-primary">Edit</a></td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-outline-danger" onclick="return confirm('are you want delete{{this.name}}')">Delete</a></td>
     
    </tr>
     {{/each}}

    
  </tbody>  
</table>
</div>
</div>

</section>